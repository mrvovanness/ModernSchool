<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Modernschool" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>
    <%= javascript_include_tag "application" %>
  </head>

  <body>
  <%= nav_bar static: :top, brand: t('navbar.logo'), responsive: true do %>
    <%= menu_group do %>
      <% if current_user %>
        <%= menu_item t('navbar.schedule') %>
        <%= menu_item t('navbar.lessons') %>
        <%= menu_item t('navbar.teachers') %>
      <% else %>
        <%= menu_item t('navbar.sign_in'), new_user_session_path %>
        <%= menu_item t('navbar.sign_up'), new_user_registration_path %>
      <% end %>
    <% end %>

    <%= menu_group pull: :right do %>
    <% if current_user %>
      <%= menu_item t('navbar.logout'), destroy_user_session_path, method: :delete %>
      <% if current_user.teacher? %>
        <%= drop_down t('navbar.add') do %>
          <%= menu_item t('navbar.add_news') %>
          <%= menu_item t('navbar.add_lesson') %>
          <%= menu_item t('navbar.add_exam') %>
          <% end %>  
        <% end %>
      <% end %>
    <% end %>

  <% end %>

    <div class="container">
      <div class="row">
        <div class="col-lg-9">
          <%= bootstrap_flash %>

          <%= yield %>

        </div>
        <div class="col-lg-3">
          <div class="well sidebar-nav">
            <% if current_user %>
              <h3><%= t('sidebar.header') %></h3>
            <% else %>
              <h3><%= t('sidebar.welcome_message') %></h3>
            <% end %>
          </div>
        </div>
      </div><!--/row-->

      <footer>
        <p>mrvovanness 2015</p>
      </footer>

    </div> <!-- /container -->

  </body>
</html>
