<h2><%= t('views.posts.news_feed') %></h2>

  <% @posts.each do |post| %>
    <div class="well well-lg">
      <h3><%= post.title %></h3>
      <p><%= post.body_html.html_safe %></p>
      <%= link_to t('links.show'), post %>
      <% if policy(post).update? %>
        <%= link_to t('links.edit'), edit_post_path(post) %>
      <% end %>
    </div>
  <% end %>
