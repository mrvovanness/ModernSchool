<%= page_header @course.title %>

<div class="well well-lg">
  <p><%= @course.description %></p>
  <strong><%= t('views.courses.lessons_of_the_course') %></strong>
  <ul>
  <% @lessons.each do |lesson| %>
    <li><%= link_to lesson.title, lesson_path(lesson) %></li>
  <% end %>
  <ul>
</div>

<% if policy(@course).update? %>
  <%= link_to t('links.edit'), edit_course_path(@course) %> |
<% end %>
<%= link_to t('links.back'), courses_path %>
