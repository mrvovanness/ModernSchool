<%= simple_form_for comment do |f| %>

  <div class="well">
    <div class="form-inputs">
      <%= f.input :commenter_name, autofocus: true %>
      <%= f.input :body %><br>
      <%= f.input_field :lesson_id, as: :hidden, value: lesson.id %>
