<%= simple_form_for comment do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :commenter_name, autofocus: true %>
    <%= f.input :body %><br>
    <%= f.input_field :lesson_id, as: :hidden, value: lesson.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to t('links.back'), comments_path, class: 'btn btn-default' %>
  </div><br>
<% end %>
